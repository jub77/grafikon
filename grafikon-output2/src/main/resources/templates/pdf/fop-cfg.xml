<fop version="1.0">

    <!-- Base URL for resolving relative URLs -->
    <base>./</base>

    <!-- Font Base URL for resolving relative font URLs -->
    <font-base>./</font-base>
    <renderers>
        <renderer mime="application/pdf">
            <fonts>
                <font embed-url="templates/pdf/DejaVuSans.ttf" embedding-mode="subset">
                    <font-triplet name="Sans" style="normal" weight="normal"/>
                </font>
                <font embed-url="templates/pdf/DejaVuSans-Oblique.ttf" embedding-mode="subset">
                    <font-triplet name="Sans" style="italic" weight="normal"/>
                </font>
                <font embed-url="templates/pdf/DejaVuSans-Bold.ttf" embedding-mode="subset">
                    <font-triplet name="Sans" style="normal" weight="bold"/>
                </font>
                <font embed-url="templates/pdf/DejaVuSans-BoldOblique.ttf" embedding-mode="subset">
                    <font-triplet name="Sans" style="italic" weight="bold"/>
                </font>
                <font embed-url="templates/pdf/DejaVuSansCondensed.ttf" embedding-mode="subset">
                    <font-triplet name="SansCondensed" style="normal" weight="normal"/>
                </font>
                <font embed-url="templates/pdf/DejaVuSansCondensed-Oblique.ttf" embedding-mode="subset">
                    <font-triplet name="SansCondensed" style="italic" weight="normal"/>
                </font>
                <font embed-url="templates/pdf/DejaVuSansCondensed-Bold.ttf" embedding-mode="subset">
                    <font-triplet name="SansCondensed" style="normal" weight="bold"/>
                </font>
                <font embed-url="templates/pdf/DejaVuSansCondensed-BoldOblique.ttf" embedding-mode="subset">
                    <font-triplet name="SansCondensed" style="italic" weight="bold"/>
                </font>
            </fonts>
        </renderer>
    </renderers>
</fop>